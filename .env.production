# Production Environment Configuration (Uberspace)
# Use with: NODE_ENV=production node src/index.js

# Shopify Configuration
SHOPIFY_SHOP=https://admin.shopify.com/store/paurum-shop
SHOPIFY_CLIENT_ID=your_prod_client_id
SHOPIFY_CLIENT_SECRET=shpss_your_prod_secret

# Sevdesk Configuration
SEVDESK_API_KEY=your_prod_api_key

# Database Configuration (Uberspace PostgreSQL)
DATABASE_URL=postgresql://sevdesk_user:secure_password@localhost:5432/sevdesk_sync

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
# Behind Nginx reverse proxy on Uberspace

# Polling Configuration (milliseconds)
# Production: poll every 120 seconds to reduce API calls
POLL_INTERVAL_MS=120000
ENABLE_POLLING=true

# Logging
LOG_LEVEL=info
LOG_FILE=/home/dev/sevdesk-connector/logs/app.log
